<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/tools">




    <!-- All UI elements should be placed here to avoid problems wich opacity -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Beschikbaar"
        android:id="@+id/Beschikbaar"
        android:textColor="@color/ovbruin"
        android:textSize="67dp"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/goToMenu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="menu"
        android:background="#00000000"
        android:textSize="20dp"
        android:width="35px"
        android:height="35px"
        android:id="@+id/goToMenu"
        android:layout_gravity="center|left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:timeZone="UTC-4"
        android:textSize="20dp"
        android:format24Hour="MMM dd, yyyy"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/goToMenu" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tot 11 : 45"
        android:id="@+id/textView6"
        android:textIsSelectable="true"
        android:textSize="40dp"
        android:layout_marginEnd="88dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/Beschikbaar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserveringen"
        android:id="@+id/button"
        android:layout_above="@+id/textView6"
        android:layout_toStartOf="@+id/imageView" />


</RelativeLayout>