<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E3D8">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="750dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:background="#FFFFFF">

        <SurfaceView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/surfaceView"
            android:background="#EB7363" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="8"
                android:id="@+id/tvDateDayInOverview"
                android:textSize="50dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="sept"
                android:id="@+id/tvDateMonthInOverview"
                android:textSize="35dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <SurfaceView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:id="@+id/surfaceView2" />

        <TextView
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:text="sprint planning"
            android:id="@+id/tvDescriptionResInOverview"
            android:textSize="45dp"
            android:gravity="center" />

        <SurfaceView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:id="@+id/surfaceView3" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="9:00"
            android:id="@+id/tvStartTimeInOverview"
            android:textSize="45dp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>