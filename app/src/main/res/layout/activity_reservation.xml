<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5CF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Ruimte reserveren"
        android:id="@+id/textView17"
        android:textSize="40dp"
        android:gravity="top"
        android:background="#F9CA6B"
        android:paddingLeft="40dp"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#B1A893">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="325dp"
            android:layout_height="400dp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruimte"
                android:id="@+id/tv"
                android:textSize="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum"
                android:id="@+id/textView3"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beschrijving"
                android:id="@+id/textView4"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personen"
                android:id="@+id/textView5"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout"
            android:id="@+id/linearLayout2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="room nr"
                android:id="@+id/etRoomName"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:background="#E7E3D8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center" />

            <EditText
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/etDate"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:background="#E7E3D8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etDescription"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:background="#E7E3D8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPersons"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:background="#E7E3D8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Doorgaan"
        android:id="@+id/buttonReserve"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="false"
        android:background="#463928"
        android:textColor="#E7E3D8" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Verwijderen"
            android:id="@+id/buttonDelete"
            android:background="#463928"
            android:textColor="#E7E3D8"
            android:layout_alignTop="@+id/buttonReserve"
            android:layout_alignEnd="@+id/etTimeStart" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/etTimeStart"
            android:textSize="30dp"
            android:layout_marginTop="150dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView7"
            android:background="#E7E3D8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/etTimeEnd"
            android:textSize="30dp"
            android:layout_marginEnd="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/etTimeStart"
            android:background="#E7E3D8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tot"
            android:id="@+id/textView7"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/etTimeEnd"
            android:layout_toStartOf="@+id/etTimeEnd"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>


</LinearLayout>