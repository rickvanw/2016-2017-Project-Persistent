<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5CF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#B1A893">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="325dp"
            android:layout_height="350dp"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruimte"
                android:id="@+id/tv"
                android:textSize="40dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datum"
                android:id="@+id/textView3"
                android:textSize="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beschrijving"
                android:id="@+id/textView4"
                android:textSize="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personen"
                android:id="@+id/textView5"
                android:textSize="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="80dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/linearLayout"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="room nr"
                android:id="@+id/etRoomName"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="65dp"
                android:textSize="40dp" />

            <EditText
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/etDate"
                android:textSize="40dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etDescription"
                android:textSize="40dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPersons"
                android:textSize="40dp" />
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Doorgaan"
            android:id="@+id/buttonReserve"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:layout_alignParentEnd="false"
            android:background="#463928"
            android:textColor="#E7E3D8" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/etTimeStart"
            android:layout_marginTop="122dp"
            android:textSize="40dp"
            android:layout_marginStart="63dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonReserve" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/etTimeEnd"
            android:textSize="40dp"
            android:layout_marginEnd="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/etTimeStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tot"
            android:id="@+id/textView7"
            android:textSize="40dp"
            android:layout_alignBottom="@+id/etTimeEnd"
            android:layout_toStartOf="@+id/etTimeEnd"
            android:layout_marginRight="10dp" />

    </RelativeLayout>


</RelativeLayout>